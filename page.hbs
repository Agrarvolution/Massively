{{!< default}} 

{{#post}} 

{{!-- Everything inside the #post tags pulls data from the page --}} 

<main id="site-main" class="site-main">
    <arcticle class="article {{post_class}}">

        {{#match @page.show_title_and_feature_image}}
        {{!-- <section class="post"> --}}

            <header class="article-header gh-canvas major">
                <h1 class="article-title">{{title}}</h1>
                {{#if custom_excerpt}}
                <p class="content">{{custom_excerpt}}</p>
                {{/if}}
            </header>

            {{#if feature_image}}
            <figure class="article-image">
                <img src="{{img_url feature_image}}" alt="alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"" />
                {{#if feature_image_caption}}
                    <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            </figure>
            <div class="image main"></div>
            {{/if}}

            <section class="gh-content gh-canvas">
                {{content}}
            </section>
        {{/match}}
        {{!-- </section> --}}
    </arcticle>
    </main>
    {{> templates}}
    {{/post}}