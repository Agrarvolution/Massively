{
    "name": "massively-agrarvolution",
    "description": "This is Massively, a text-heavy, article-oriented theme for Ghost.",
    "demo": "https://massively.ghost.io",
    "version": "1.2.0",
    "engines": {
        "ghost": ">=4.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "pretest": "gulp build",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/TryGhost/Massively.git"
    },
    "bugs": "https://github.com/TryGhost/Massively/issues",
    "contributors": [
        {
            "name": "ajlkn",
            "email": "aj@lkn.io",
            "url": "https://twitter.com/ajlkn"
        }
    ],
    "devDependencies": {
        "beeper": "2.1.0",
        "gscan": "4.38.0",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-sass": "5.1.0",
        "gulp-sourcemaps": "3.0.0",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "node-sass": "9.0.0",
        "sass": "^1.67.0"
    },
    "config": {
        "posts_per_page": 12,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "sm": {
                "width": 400
            },
            "m": {
                "width": 500
            },
            "xm": {
                "width": 600
            },
            "xxm": {
                "width": 700
            },
            "xxxm": {
                "width": 800
            },
            "l": {
                "width": 900
            },
            "xl": {
                "width": 1000
            },
            "xxl": {
                "width": 1200
            },
            "xxxl": {
                "width": 1350
            },
            "xxxxl": {
                "width": 1600
            }
        },
        "card_assets": {
            "exclude": [
                "audio",
                "before-after",
                "blockquote",
                "bookmark",
                "button",
                "gallery",
                "nft",
                "product",
                "toggle",
                "video"
              ]
        },
        "custom": {
            "background_image_link": {
                "type": "text",
                "default": "/"
            }
        }
    }
}